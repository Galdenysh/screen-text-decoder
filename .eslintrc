{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": ["airbnb-base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      },
      "import/extensions": [".js", ".ts"]
    },
    "rules": {
      "quotes": ["error", "double"],
      "no-underscore-dangle": ["error", { "allow": ["__filename", "__dirname"] }],
      "import/no-unresolved": "off"
    }
  }
